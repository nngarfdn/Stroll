<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="16dp"
    app:cardCornerRadius="4dp"
    app:cardMaxElevation="8dp"
    app:cardElevation="8dp"
    android:layout_marginVertical="4dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgItemWisata"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtNamaDestinasiItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:maxWidth="180dp"
            android:maxLines="1"
            android:fontFamily="@font/mont_medium"
            android:text="Nama Destinasi"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/imgItemWisata"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtDeskripsiDesItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/mont_regular"
            android:maxLines="2"
            android:maxWidth="180dp"
            android:layout_marginEnd="4dp"
            android:text="Deskripsi destinasi"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/txtNamaDestinasiItem"
            app:layout_constraintTop_toBottomOf="@+id/txtNamaDestinasiItem" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_baseline_location_on_24"
            app:layout_constraintStart_toStartOf="@+id/txtDeskripsiDesItem"
            app:layout_constraintTop_toBottomOf="@+id/txtDeskripsiDesItem" />

        <TextView
            android:id="@+id/txtAlamatDestinasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:text="alamat destinasi"
            android:maxWidth="150dp"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>